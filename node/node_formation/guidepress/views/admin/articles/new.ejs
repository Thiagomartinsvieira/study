<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>New Article</h2>
        </div>
        <div class="card-body">
            <form method="post" action="/categories/save">
                <input class="form-control" type="text" name="title" placeholder="define article title"><br>
                <textarea class="form-control" placeholder="Write the article here" name="body" id="article"></textarea>
                <br>
                <button class="btn btn-success">Register</button>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

