<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1>Questions</h1>
        <hr>
        <a href="/to_ask" class="btn btn-primary">to ask</a>
        <hr>
        <% questions.forEach(question => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <h3>
                    <%= question.title %>
                </h3>
            </div>
            <div class="card-footer">
                <a href="/question/<%= question.id %>" class="btn btn-primary">to respond</a>
            </div>
        </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>